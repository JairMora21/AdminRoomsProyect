@using AdminRooms.Models.ViewModel;
@model CasaViewModel

@{
    ViewData["Title"] = "Editar Casa";
}
<style>
    .wrapper-edit {
        margin: 60px auto;
        background-color: rgba(255, 255, 255, 1);
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow-y: auto;
        max-width: 1000px;
    }

    .form-edit {
        padding: 10px 20px 20px 20px;
        width: 50%;
    }

    .form-group-edit {
        margin-bottom: 10px;
    }



    .input-text-edit {
        width: 100%;
    }

    .form-horizontal.login label {
        font-weight: bold;
    }

</style>

<body class="fondo">
    <div class="wrapper-edit">

        <div class="d-flex justify-content-between">
            <h4>Actualizar Residencia</h4>
            <p class="mb-0 ml-auto"><a href="@Url.Action("Index")" class="btn btn-close"></a></p>
        </div>
        <hr />


        <div class=" justify-content-center">
            @using (Html.BeginForm("EditHome", "Residencias", FormMethod.Post, new { @class = "form-horizontal form-edit", role = "form" }))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group-edit row">
                    <div class="col-4">
                        <label asp-for="Nombre" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nombre" class="input-text-edit" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group-edit row">
                    <div class="col-4">
                        <label asp-for="Direccion" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Direccion" class="input-text-edit" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group-edit row">
                    <div class="col-4">
                        <label asp-for="NumeroCuartos" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumeroCuartos" class="input-text-edit" />
                        <span asp-validation-for="NumeroCuartos" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-primary">
                </div>


                @if (ViewData["Mensaje"] != null)
                {
                    <div class="form-group-edit">
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</body>