@model AdminRooms.Models.ViewModel.CuartoViewModel

@{
    ViewData["Title"] = "Agregar Cuarto";
}
<style>
    .wrapper-edit {
        margin: 60px auto;
        background-color: rgba(255, 255, 255, 1);
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow-y: auto;
        max-width: 1000px;
    }

    .form-edit {
        padding: 10px 20px 20px 20px;
        width: 50%;
    }

    .form-group-edit {
        margin-bottom: 10px;
    }



    .input-text-edit {
        width: 100%;
    }

    .form-horizontal.login label {
        font-weight: bold;
    }

</style>

<body class="fondo">
    <div class="wrapper-edit">

        <div class="d-flex justify-content-between">
            <h4>Agregar Cuarto</h4>
            <p class="mb-0 ml-auto"><a href="@Url.Action("Index")" class="btn btn-close"></a></p>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddRoom">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Costo" class="control-label"></label>
                        <input asp-for="Costo" class="form-control" />
                        <span asp-validation-for="Costo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeroCuarto" class="control-label"></label>
                        <input asp-for="NumeroCuarto" class="form-control" />
                        <span asp-validation-for="NumeroCuarto" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Agregar" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
